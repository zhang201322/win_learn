<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_mainActivity_username"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_mainActivity_password"
        android:layout_below="@+id/editText_mainActivity_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_mainActivity_username"
        android:layout_alignEnd="@+id/editText_mainActivity_username"
        android:hint="password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_mainActivity_id"
        android:layout_below="@+id/editText_mainActivity_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_mainActivity_password"
        android:layout_alignEnd="@+id/editText_mainActivity_password"
        android:hint="id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="commit"
        android:id="@+id/button_mainActivity_commit"
        android:layout_below="@+id/editText_mainActivity_id"
        android:layout_alignRight="@+id/editText_mainActivity_id"
        android:layout_alignEnd="@+id/editText_mainActivity_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_mainActivity_getReturnInfo"
        android:layout_below="@+id/button_mainActivity_commit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_mainActivity_commit"
        android:layout_alignEnd="@+id/button_mainActivity_commit"
        android:minLines="10"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_mainActivity_path"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView_mainActivity_getReturnInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_mainActivity_getReturnInfo"
        android:layout_alignEnd="@+id/textView_mainActivity_getReturnInfo" />
</RelativeLayout>
